# LLM Provider Settings
LLM_PROVIDER=openai                 # Options: openai, claude, gemini
USE_EFFICIENT_MODEL=false           # Use smaller, faster models

# API Keys
OPENAI_API_KEY=your_openai_key_here
CLAUDE_API_KEY=your_claude_key_here
GOOGLE_API_KEY=your_google_key_here

# NVD API Key
NVD_API_KEY=your_nvd_api_key

# Data Source Settings
MITRE_API_ENABLED=true
EXPLOIT_DB_ENABLED=true
SANS_ISC_ENABLED=true
ZDI_ENABLED=true
CERT_CC_ENABLED=true
VULDB_ENABLED=true
CISA_KEV_ENABLED=true
ALIENVAULT_OTX_ENABLED=true
EPSS_ENABLED=true

# AlienVault OTX API Key
ALIENVAULT_OTX_API_KEY=your_alienvault_key

# User Agents
VULDB_USER_AGENT=Vulnerability Blog Generator
MITRE_USER_AGENT=Vulnerability Blog Generator

# Output Settings
OUTPUT_DIR=../../src/posts

# LangGraph Settings
USE_WORKFLOW=true

# LangSmith Tracing
ENABLE_TRACING=false
LANGSMITH_API_KEY=your_langsmith_key_here
LANGSMITH_PROJECT=vuln-post-generator